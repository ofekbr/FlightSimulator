<UserControl x:Class="FlightSimulatorApp.View.Error"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <StackPanel RenderTransformOrigin="0.5,0.5">
            <TextBlock Text="ERROR LOG :"/>
            <ScrollViewer HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="400">
                    <TextBlock  x:Name="Textblock1" Text="{Binding VM_ErrorMessage}"/>
            </ScrollViewer>
        </StackPanel>

    </Grid>
</UserControl>
